<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#FF0000" />
            <corners android:radius="10px" />
            <size android:width="50dp"
                android:height="20dp"/>
        </shape>
    </item>

    <item
        android:left="30dp">
        <shape >
            <solid android:color="#BF0B0B" />
            <corners android:radius="10px" />
            <size android:width="20dp"
                android:height="20dp"/>
        </shape>
    </item>
    <item
        android:left="27dp"
        android:right="10dp"
        android:top="0dp"
        android:bottom="-10dp">
        <rotate android:fromDegrees="15">
            <shape >
                <gradient
                    android:angle="90"
                    android:centerColor="#BF0B0B"
                    android:endColor="#BF0B0B"
                    android:startColor="#BF0B0B" />
            </shape>
        </rotate>
    </item>

</layer-list>